{
    "extends": "solhint:recommended",
    "rules": {
        "compiler-version": [
            "error",
            "0.8.18"
        ],
        "no-unused-vars": "warn",
        "func-visibility": [
            "warn",
            {
                "ignoreConstructors": true
            }
        ],
        "max-line-length": [
            "off"
        ],
        "private-vars-leading-underscore": [
            "warn",
            {
                "strict": true
            }
        ],
        "reason-string": [
            "warn",
            {
                "maxLength": 60
            }
        ],
        "custom-errors": "off",
        "ordering": "warn",
        "immutable-vars-naming": [
            "warn",
            {
                "immutablesAsConstants": false
            }
        ],
        "func-named-parameters": [
            "warn",
            5
        ],
        "one-contract-per-file": "off"
    }
}